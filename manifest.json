{
  "manifest_version": 2,

  "name": "Blocker",
  "description": "This extension blocks navagation to sites when you're trying to focus",
  "version": "1.0",

  "background": {
      "scripts": ["background.js"]
  },

  "options_page": "main.html",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["style.css"],
      "js": ["jquery-3.3.1.min.js", "content_script.js"],
      "run_at": "document_end"
    }
  ],

  "browser_action": {
    "default_icon": "icon.png"
  },

  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ]
}
