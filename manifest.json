{
  "manifest_version": 2,

  "name": "Blocker",
  "description": "This extension blocks navagation to sites when you're trying to focus",
  "version": "1.0",

  "background": {
      "scripts": ["background.js"]
  },

  "options_page": "main.html",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["jquery-3.3.1.min.js"]     
    }
  ],

  "icons": {
    "16": "icon_16.png",
    "128": "icon_128.png"
  },

  "browser_action": {
    "default_icon": "icon_16.png"
  },

  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ]
}
